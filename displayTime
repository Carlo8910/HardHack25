#include  <Wire.h>
#include <string.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);
unsigned long time;
unsigned long lastCheck;

// Time variables
unsigned long year;
unsigned int month;
unsigned int day;
unsigned int hours;
unsigned int minutes;
unsigned int seconds;

// String display for first row
char timeStr[16];

void setup() {
  day = 1;
  month = 2;
  year = 2025;
  hours = 5;
  minutes = 8;
  // Compile string
  snprintf(timeStr, sizeof(timeStr), 
           "%02u/%02u/%04lu %02u:%02u",
           month, day, year);

  // Initialize LCD
  lcd.init();
  lcd.backlight();
  lcd.setCursor(0, 0);
  lcd.print(timeStr);
}

void loop() {
  time = millis();
  if (time % 60000 == 0) {
    minutes++;
    lcd.setCursor(15, 0);
  }
}
